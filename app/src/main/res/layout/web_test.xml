<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:id="@+id/linweb"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:gravity="center"
              android:orientation="vertical" >

    <WebView
        android:id="@+id/article_web_view"
        android:layout_width="match_parent"
        android:layout_height="0dip"
        android:layout_weight="1" />

    <LinearLayout
        android:id="@+id/bottom_menu"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingBottom="0.0dip"
        android:paddingLeft="0.0dip"
        android:paddingRight="0.0dip"
        android:paddingTop="0.0dip"
        android:background="@android:color/black">



        <com.facebook.share.widget.ShareButton
            android:id="@+id/facebook_share_button"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="2"
            android:background="@color/com_facebook_blue"

            />


        <ImageButton
            android:id="@+id/twitter_share_button"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="2"
            android:src="@drawable/tw__composer_logo_blue"
            android:background="@color/tw__composer_blue"/>

        <ImageButton
            android:id="@+id/shareButton"
            android:layout_weight="2"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:src="@android:drawable/ic_menu_share"
            android:background="@android:color/holo_blue_light"
            />

    </LinearLayout>

</LinearLayout>